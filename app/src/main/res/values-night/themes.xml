<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/background_dark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Action bar -->
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <!-- System UI -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <!-- Customize your theme here. -->
        <!--<item name="android:fontFamily">@font/montserrat</item>-->
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog.Rounded</item>

    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@android:color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


</resources>