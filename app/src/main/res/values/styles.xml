<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearance.Capsule" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearance.Rounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/round_corners</item>
    </style>


    <style name="Material.Button.Circular" parent="Widget.MaterialComponents.Button">
        <item name="iconTint">@color/md_white_1000</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="Material.Button.Circular.OutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">@color/color_circular_button_outline</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

</resources>